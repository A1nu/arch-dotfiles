[Unit]
Description=Polybar launcher
After=xsession.target
PartOf=xsession.target

[Service]
Type=oneshot
ExecStart=%h/.config/polybar/launch.sh
RemainAfterExit=yes
Environment=DISPLAY=:0
Environment=XAUTHORITY=%h/.Xauthority
Environment=PATH=%h/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/bin
TimeoutStopSec=5
KillMode=mixed
SendSIGKILL=yes

[Install]
WantedBy=xsession.target

