[Unit]
Description=Picom X compositor
After=xsession.target
PartOf=xsession.target

[Service]
Type=simple
ExecStart=/usr/bin/picom --config %h/.config/picom/picom.conf
Restart=on-failure
RestartSec=1
TimeoutStopSec=5
KillMode=mixed
SendSIGKILL=yes
Environment=DISPLAY=:0
Environment=XAUTHORITY=%h/.Xauthority
Environment=PATH=%h/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/bin

[Install]
WantedBy=xsession.target

