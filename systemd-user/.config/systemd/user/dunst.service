[Unit]
Description=Dunst notification daemon
After=xsession.target
PartOf=xsession.target

[Service]
Type=simple
ExecStart=/usr/bin/dunst
Restart=on-failure
RestartSec=1
Environment=DISPLAY=:0
Environment=XAUTHORITY=%h/.Xauthority
TimeoutStopSec=5
KillMode=mixed
SendSIGKILL=yes

[Install]
WantedBy=xsession.target

