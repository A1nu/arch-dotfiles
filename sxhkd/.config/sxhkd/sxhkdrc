# --- Launcher keys ---
super + Return
  terminal
super + e
    env UTIL_TERM=1 terminal --class FM -e yazi
super + space
  rofi -show drun
 # Task manager (htop)
ctrl + shift + Escape
    env UTIL_TERM=1 terminal --class HTOP -e htop

# Lockscreen
super + shift + l
  i3lock -c 000000

# Reload sxhkd config
super + Escape
  pkill -USR1 -x sxhkd

# Quit / Kill
super + alt + q
    bspc quit
super + alt + r
    bspc wm -r
super + shift + q
  bspc node -c

# Toggle floating & fullscreen
super + v
  bspc node -t ~floating
super + f
  bspc node -t ~fullscreen
super + r
    bspc node -f .floating.local

# Pseudo-tile (similar to Hyprland pseudotile)
super + p
  bspc node -t ~pseudo_tiled

# Focus move (HJKL)
super + {h,j,k,l}
  bspc node -f {west,south,north,east}

# Swap/move the focused node in the tree
super + shift + {h,j,k,l}
  bspc node -s {west,south,north,east}

super + alt + {h, j, k, l}
    bspc node -n {west,south,north,east}

# Resize tiles by nudging edges (approx Hypr resizeactive)
super + ctrl + {h, l}
  bspc node -z left  {+10 0, -10 0}
super + ctrl + {k, j}
  bspc node -z bottom {0 -10, 0 +10}
super + ctrl + shift + {h, l}
  bspc node -z left  {+100 0, -100 0}
super + ctrl + shift + {k, j}
  bspc node -z bottom {0 -100, 0 +100}
# Move floating window by arrows (small/big steps)
super + {Up,Down,Left,Right}
  bspc node -v {0 -10,0 +10,-10 0,+10 0}
super + shift + {Up,Down,Left,Right}
  bspc node -v {0 -100,0 +100,-100 0,+100 0}

# Layout switch (monocle/tiling)
super + m
    bspc desktop -l next

# Workspaces (desktops) 1..9,0=10
super + {1-9,0}
  bspc desktop -f {1-9,10}
super + shift + {1-9,0}
  bspc node    -d {1-9,10}

super + s
  bspc node -g sticky

super + shift + m
    bspc desktop -l ~

# Volume / media (PipeWire via wpctl like in Hyprland)
XF86AudioRaiseVolume
  wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+
XF86AudioLowerVolume
  wpctl set-volume    @DEFAULT_AUDIO_SINK@ 5%-
XF86AudioMute
  wpctl set-mute      @DEFAULT_AUDIO_SINK@ toggle
XF86AudioMicMute
  wpctl set-mute      @DEFAULT_AUDIO_SOURCE@ toggle
XF86AudioPlay
  playerctl play-pause
XF86AudioPause
  playerctl play-pause
XF86AudioNext
  playerctl next
XF86AudioPrev
  playerctl previous
XF86Tools
  toggle-sink.sh
XF86Tools + shift
  toggle-hdmi --move-active
XF86MonBrightnessUp
  brightnessctl set +5%
XF86MonBrightnessDown
  brightnessctl set 5%-

# Screenshot to clipboard (X11)
super + ctrl + 4
  maim -s | xclip -selection clipboard -t image/png
